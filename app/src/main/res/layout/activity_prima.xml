<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/connetti"
        android:layout_width="166dp"
        android:layout_height="58dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="#822433"
        android:text="Connetti"
        app:layout_constraintEnd_toEndOf="@+id/Benvenuto"
        app:layout_constraintStart_toStartOf="@+id/Benvenuto"
        app:layout_constraintTop_toBottomOf="@+id/Benvenuto" />

    <Button
        android:id="@+id/Iscriviti"
        android:layout_width="166dp"
        android:layout_height="58dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#822433"
        android:text="Iscriviti"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/connetti"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/connetti"
        app:layout_constraintTop_toBottomOf="@+id/connetti"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Benvenuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:text="BENVENUTO"
        android:textColor="#822433"
        android:textSize="37dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="100dp"
        android:layout_height="107dp"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stemma_sapienza"
        tools:layout_editor_absoluteX="155dp" />

</androidx.constraintlayout.widget.ConstraintLayout>